#!/usr/bin/env bash
# Displays "To infinity and beyond" indefinetely and killed conditionally
trap "echo 'I hate the kill command'" SIGTERM
trap "echo 'Y U no love me?!' && rm -f '/var/run/myscript.pid' && pkill -9 -o -f '100-process_and_pid_file'" SIGINT
cd "/var/run/myscript.pid" || exit
while true
do
    echo "To infinity and beyond"
    sleep 2
done
